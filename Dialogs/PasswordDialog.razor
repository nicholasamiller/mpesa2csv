@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField Immediate="true" T="string" Label="Password" Required="true" Variant="Variant.Outlined" InputType="InputType.Password" @ref="pwField" />
            
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!success)">Convert</MudButton>
    </DialogActions>
</MudDialog>

@code {
    @code {

        
        [CascadingParameter] MudDialogInstance MudDialog { get; set; }
        bool success;
        string[] errors = { };
        MudForm form;
        
        MudTextField<string> pwField;
        void Submit() => MudDialog.Close(DialogResult.Ok(true));
        void Cancel() => MudDialog.Cancel();

       
    }
}
