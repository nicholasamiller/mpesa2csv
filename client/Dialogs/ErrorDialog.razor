<MudDialog > 
    <DialogContent>
        @Message
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>



@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Message { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
